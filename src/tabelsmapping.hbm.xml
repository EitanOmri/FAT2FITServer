<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.fat2fit.model.User" table="users">
        <id name="username" type="string" column="Username" >
            <!--<generator class="increment"/>-->
        </id>
        <property name="firsName">
            <column name="FirstName"/>
        </property>
        <property name="lastName">
            <column name="LastName"/>
        </property>
        <property name="email">
            <column name="Email"/>
        </property>
        <property name="password">
            <column name="Password"/>
        </property>
        <property name="dateOfBirth">
            <column name="DateOfBirth"/>
        </property>
        <property name="weight">
            <column name="Weight"/>
        </property>
        <property name="height">
            <column name="Height"/>
        </property>
        <property name="isManager">
            <column name="IsManager"/>
        </property>
    </class>
    <class name="com.fat2fit.model.Category" table="category">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="name">
            <column name="Name"/>
        </property>
    </class>
    <class name="com.fat2fit.model.ExerciseHistory" table="exercisehistory">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>

        <property name="username">
            <column name="Username"/>
        </property>
        <property name="idExercise">
            <column name="IdExercise"/>
        </property>
        <property name="sets">
            <column name="Sets"/>
        </property>
        <property name="reps">
            <column name="Reps"/>
        </property>
        <property name="date">
            <column name="Date"/>
        </property>
    </class>
    <class name="com.fat2fit.model.Exercises" table="exercises">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="name">
            <column name="Name"/>
        </property>
        <property name="caloriesPerReps">
            <column name="CaloriesPerReps"/>
        </property>
        <property name="categoryID">
            <column name="CategoryID"/>
        </property>
    </class>
    <class name="com.fat2fit.model.MessageFromAdmin" table="messagefromadmin">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="content">
            <column name="Content"/>
        </property>
        <property name="date">
            <column name="Date"/>
        </property>

    </class>
    <class name="com.fat2fit.model.MessageToAdmin" table="messagetoadmin">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="content">
            <column name="Content"/>
        </property>
        <property name="date">
            <column name="Date"/>
        </property>
        <property name="username">
            <column name="Username"/>
        </property>
    </class>
    <class name="com.fat2fit.model.TrainingListExercises" table="traininglistexercises">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="idTraining">
            <column name="IdTraining"/>
        </property>
        <property name="idExercise">
            <column name="IdExercise"/>
        </property>
        <property name="sets">
            <column name="Sets"/>
        </property>
        <property name="reps">
            <column name="Reps"/>
        </property>
    </class>
    <class name="com.fat2fit.model.TrainingListName" table="traininglistname">
        <id name="id" type="int" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="name">
            <column name="Name"/>
        </property>
    </class>
</hibernate-mapping>